<div class="banner"  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1583680599407-f73ab374fff4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2700&q=80);">
  <div class="container">
    <h1>Hire a ghost!</h1>
    <p>All in good spirit</p>
  </div>
</div>

<div class="cards py-4">
  <% @ghosts.each do |ghost| %>
    <% if ghost.photo.attached? %>
      <%= link_to ghost_path(ghost), class: "text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path ghost.photo.key, height: 300, crop: :fill %>')">
          <p><%= ghost.name %></p>
        </div>
      <% end %>
    <% else %>
      <%= link_to ghost_path(ghost), class: "text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?ghost)">
          <p><%= ghost.name %></p>
        </div>
      <% end %>
    <% end %>
   <% end %>
</div>
