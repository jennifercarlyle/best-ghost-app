<html>
  <head>
    <!-- link rel="stylesheet" href="book-now-button.css">
    <link rel="stylesheet" href="card-ghost.css">
    <link rel="stylesheet" href="card-grid-ghosts.css"> -->
  </head>

  <body>
    <div class="container ghost-corners">
      <h1 class="p-3 background text-color title line"><%= @ghost.name %></h1>
      <div class="card-ghost">
          <% if @ghost.photo.attached? %>
            <%= cl_image_tag @ghost.photo.key, crop: :fill %>
          <% else %>
            <img src="https://source.unsplash.com/1600x900/?ghost,spooky" alt="ghost">
          <% end %>
          <%= link_to "Book now", new_ghost_booking_path(@ghost), class:"btn btn-flat btn-book" %>
          <div class="card-ghost-infos">
        <div>
          <h1><%= @ghost.name %></h1>
          <br>
           <p><%= "#{'⭐️' * @ghost.average_rating} (#{pluralize(@ghost.reviews.length, 'review')})"%></p>
          <br>
          <h2><%= @ghost.location %></h2>
          <br>
          <p><%= @ghost.description %></p>
        </div>
          <h2 class="card-ghost-pricing">£ <%= @ghost.rate %></h2>
        </div>
      </div>

      <div>
        <h3 class="other-ghosts border-top-2 background text-color"> Reviews</h3>
      </div>

      <% @ghost.reviews.each do |review| %>
        <div class="card-product-reviews">
          <div class="card-ghost-infos">
            <h5><%= '⭐️' * review.rating %></h5>
            <p style= "font-style: italic;"><%= "#{review.content} -#{review.booking.user.name} (#{review.booking.created_at.strftime("%b. %Y")})" %></p>
          </div>
        </div>
      <% end %>

      <div>
        <h3 class="other-ghosts border-top-2 background text-color"> Looking for some other spooks?</h3>
      </div>

      <div>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?ghost,spooky)">
            <% if Rails.env.production? %>
              <%= link_to "Sexy Ghosts", "http://best-ghost-app.herokuapp.com/ghosts?query=sexy&commit=Search" %>
              <% else %>
              <%= link_to "Sexy Ghosts", "http://localhost:3000/ghosts?query=sexy&commit=Search" %>
              <% end %>
          </div>

          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?ghost,spooky)">
            <% if Rails.env.production? %>
            <%= link_to "Humorous Ghosts", "http://best-ghost-app.herokuapp.com/ghosts?query=humorous&commit=Search" %>
            <% else %>
            <%= link_to "Humorous Ghosts", "http://localhost:3000/ghosts?query=humorous&commit=Search" %>
            <% end %>
          </div>

          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?ghost,spooky)">
            <% if Rails.env.production? %>
            <%= link_to "Prankster Ghosts", "http://best-ghost-app.herokuapp.com/ghosts?query=prankster&commit=Search" %>
            <% else %>
            <%= link_to "Prankster Ghosts", "http://localhost:3000/ghosts?query=prankster&commit=Search" %>
            <% end %>
          </div>
        </div>
      </div>
  </body>
</html>
